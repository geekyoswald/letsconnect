generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  username String @unique
  messages Message[]
}    

model Message {
  id         Int      @id @default(autoincrement())
  text     String
  isSender    Int
  userId    Int
  user     User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
  

